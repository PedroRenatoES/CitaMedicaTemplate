                   style="display: block; padding: 10px; background-color: #e0f2f1; border-radius: 5px; border: 1px solid #00796b; color: #00796b; text-decoration: none; font-weight: bold; font-size: 1.1rem; transition: background-color 0.3s ease;"
                   onmouseover="this.style.backgroundColor='#b2dfdb'; this.style.color='#004d40';"
                   onmouseout="this.style.backgroundColor='#e0f2f1'; this.style.color='#00796b';">
